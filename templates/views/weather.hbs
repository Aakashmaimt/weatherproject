<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
    <title>Weather</title>
</head>
<body>
    {{>header}}

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form" onsubmit="return false">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <button type="submit" id="submitBtn">Search</button>
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day"></p>
                        <p id="today_date"></p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output</p>
                        <div class="middle_layer data_hide" id="output">
                            <p style="color: white;"><span id="temp">0</span><sup>o</sup>C</p>
                            <p id="temp_status"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{>footer}}    
</body>
<script src="js/main.js"></script>
</html>